// create cycles of arbitrary sizes including size 1

struct %node {
  %node ptr;
};

def createCycle(int size) : %node {
  %node head;
  %node n;
  %node n2;

  head := new %node;
  n := head;

  while 1 < size {
    n2 := new %node;
    n.ptr := n2;
    n := n2;
    size := size - 1;
  }

  n.ptr := head;

  return head;
}

